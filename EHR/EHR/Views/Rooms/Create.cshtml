@model EHR.Database.Room
@{
    ViewData["Title"] = "Create New Room";
}

<form asp-action="Create">
    <div class="container border p-3 my-5" id="mainDiv" style="display:none">
        <div class="mx-5">
            <div class="row pt-4 col-12">
                <h2 class="text-info pl-0">Add Room</h2>
            </div>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group row col-4">
                <label class="control-label">Room Number</label>
                <input asp-for="RoomNum" class="form-control" />
                <span asp-validation-for="RoomNum" class="text-danger"></span>
            </div>
            <div class="form-group row col-4">
                <label class="control-label">Total Beds</label>
                <input asp-for="TotalBeds" class="form-control" />
                <span asp-validation-for="TotalBeds" class="text-danger"></span>
            </div>
            <div class="form-group row col-4">
                <label class="control-label">Available Beds</label>
                <input asp-for="AvailableBeds" class="form-control" disabled value="0" />
                <span asp-validation-for="AvailableBeds" class="text-danger"></span>
            </div>
            <div class="form-group row col-4">
                <label class="control-label">Room Type</label>
                <select asp-for="RoomTypeId" class="form-control" asp-items="ViewBag.RoomTypeId"></select>
                <span asp-validation-for="RoomTypeId" class="text-danger"></span>
            </div>



            <div class="form-group row col-4">
                <input type="submit" value="Create" class="btn btn-outline-primary mr-1" />
                <a asp-action="Index" class="btn btn-outline-info mr-1 w-25"><i class="fas fa-arrow-circle-left" style="font-size:20px"></i></a>
            </div>

        </div>
    </div>
</form>

@section Scripts{

    @{
        <partial name="_ValidationScriptsPartial" />
    }
    <script>
        $(document).ready(function () {
            $("#mainDiv").fadeIn(1000);
        });

    </script>
}

@model Databasae.Database.Patient

@{
    ViewData["Title"] = "Delete";
}


<div class=" container border p-3 my-5" id="mainDiv" style="display:none">
    <div class="mx-5">
        <div class="col-12 row pt-4">
            <h2>You are about to Delete <strong class="text-danger">@Model.PatientFirstName @Model.PatientLastName</strong> !</h2>

        </div>
        <hr />
        <div class="col-md-10">
            <dl class="row">
                <dt class="col-sm-2">
                    First Name
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.PatientFirstName)
                </dd>
            </dl>
            <dl class="row">
                <dt class="col-sm-2">
                    Last Name
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.PatientLastName)
                </dd>
            </dl>
            <dl class="row">
                <dt class="col-sm-2">
                    DOB
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.PatientDob)
                </dd>
            </dl>
            <dl class="row">
                <dt class="col-sm-2">
                    SSN
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Ssn)
                </dd>
            </dl>
            <dl class="row">
                <dt class="col-sm-2">
                    Addresss
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.PatientAddresss)
                </dd>
            </dl>
            <dl class="row">
                <dt class="col-sm-2">
                    City
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.PatientCity)
                </dd>
            </dl>
            <dl class="row">
                <dt class="col-sm-2">
                    Zip Code
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.PatientZipCode)
                </dd>
            </dl>
            <dl class="row">
                <dt class="col-sm-2">
                    State
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.State.StateName)
                </dd>
            </dl>
            <dl class="row">
                <dt class="col-sm-2">
                    Mobile
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.PatientMobile)
                </dd>
            </dl>
            <dl class="row">
                <dt class="col-sm-2">
                    Email
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.PatientEmail)
                </dd>
            </dl>


            <form asp-action="Delete">
                <div class="form-group row col-4">
                    <input type="hidden" asp-for="PatientId" />
                    <button type="submit" class="btn btn-danger mr-1"><i class="fas fa-trash-alt" style="font-size:20px"></i></button>
                    <a asp-action="Index" class="btn btn-outline-info mr-1 w-25"><i class="fas fa-arrow-circle-left" style="font-size:20px"></i></a>
                </div>
            </form>

        </div>

    </div>

</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $("#mainDiv").fadeIn(1000);
        });

    </script>

}
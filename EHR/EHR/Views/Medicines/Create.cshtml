@model EHR.Database.Medicine
@{
    ViewData["Title"] = "Create Category";
}

<form asp-action="Create">
    <div class="container border p-3 my-5" id="mainDiv" style="display:none">
        <div class="mx-5">
            <div class="row pt-4 col-12">
                <h2 class="text-info pl-0">Add New Medicine</h2>
            </div>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group row col-4">
                <label class="control-label">Name</label>
                <input asp-for="MedicineName" class="form-control" />
                <span asp-validation-for="MedicineName" class="text-danger"></span>
            </div>

            <div class="form-group row col-4">
                <label class="control-label">Price</label>
                <input asp-for="MedicinePrice" class="form-control" />
                <span asp-validation-for="MedicinePrice" class="text-danger"></span>
            </div>

            <div class="form-group row col-4">
                <label class="control-label">Expiry Date</label>
                <input asp-for="MedicineexpiredDate" class="form-control" />
                <span asp-validation-for="MedicineexpiredDate" class="text-danger"></span>
            </div>

            <div class="form-group row col-4">
                <label class="control-label">Dose Note</label>
                <input asp-for="MedicineDoseNote" class="form-control" />
                <span asp-validation-for="MedicineDoseNote" class="text-danger"></span>
            </div>



            <div class="form-group row col-4">
                <input type="submit" value="Create" class="btn btn-outline-primary mr-1" />
                <a asp-action="Index" class="btn btn-outline-info mr-1 w-25"><i class="fas fa-arrow-circle-left" style="font-size:20px"></i></a>
            </div>

        </div>
    </div>
</form>

@section Scripts{

    @{
        <partial name="_ValidationScriptsPartial" />
    }
    <script>
        $(document).ready(function () {
            $("#mainDiv").fadeIn(1000);
        });

    </script>
}

@model EHR.Database.Doctor

@{
    ViewData["Title"] = "Delete";
}


<div class=" container border p-3 my-5" id="mainDiv" style="display:none">
    <div class="mx-5">
        <div class="col-12 row pt-4">
            <h2>You are about to Delete <strong class="text-danger">@Model.DoctorFirstName @Model.DoctorLastName</strong> !</h2>

        </div>
        <hr />
        <div class="col-md-10">
            <dl class="row">
                <dt class="col-sm-2">
                    First Name
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.DoctorFirstName)
                </dd>
            </dl>
            <dl class="row">
                <dt class="col-sm-2">
                    Last Name
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.DoctorLastName)
                </dd>
            </dl>
            <dl class="row">
                <dt class="col-sm-2">
                    SSN
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Ssn)
                </dd>
            </dl>
            <dl class="row">
                <dt class="col-sm-2">
                    Addresss
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.DoctorAddresss)
                </dd>
            </dl>
            <dl class="row">
                <dt class="col-sm-2">
                    City
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.DoctorCity)
                </dd>
            </dl>
            <dl class="row">
                <dt class="col-sm-2">
                    Zip Code
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.DoctorZipCode)
                </dd>
            </dl>
            <dl class="row">
                <dt class="col-sm-2">
                    State
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.State.StateName)
                </dd>
            </dl>
            <dl class="row">
                <dt class="col-sm-2">
                    Mobile
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.DoctorMobile)
                </dd>
            </dl>
            <dl class="row">
                <dt class="col-sm-2">
                    Email
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.DoctorEmail)
                </dd>
            </dl>
            <dl class="row">
                <dt class="col-sm-2">
                    Department
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Department.DepartmentName)
                </dd>
            </dl>

            <form asp-action="Delete">
                <div class="form-group row col-4">
                    <input type="hidden" asp-for="DoctorId" />
                    <button type="submit" class="btn btn-danger mr-1"><i class="fas fa-trash-alt" style="font-size:20px"></i></button>
                    <a asp-action="Index" class="btn btn-outline-info mr-1 w-25"><i class="fas fa-arrow-circle-left" style="font-size:20px"></i></a>
                </div>
            </form>

        </div>

    </div>

</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $("#mainDiv").fadeIn(1000);
        });

    </script>

}
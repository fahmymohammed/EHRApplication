@model Databasae.Database.Doctor

@{
    ViewData["Title"] = "Details";
}


<div class=" container border p-3 my-5" id="mainDiv" style="display:none">
    <div class="mx-5">

        <div class="col-12 row pt-4">
            <h2><strong class="text-info">@Model.DoctorFirstName @Model.DoctorLastName</strong> Details</h2>
        </div>
        <hr />
        <div class="col-md-10">
            <dl class="row">
                <dt class="col-sm-2">
                    First Name
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.DoctorFirstName)
                </dd>
            </dl>
            <dl class="row">
                <dt class="col-sm-2">
                    Last Name
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.DoctorLastName)
                </dd>
            </dl>
            <dl class="row">
                <dt class="col-sm-2">
                    SSN
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Ssn)
                </dd>
            </dl>
            <dl class="row">
                <dt class="col-sm-2">
                    Addresss
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.DoctorAddresss)
                </dd>
            </dl>
            <dl class="row">
                <dt class="col-sm-2">
                    City
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.DoctorCity)
                </dd>
            </dl>
            <dl class="row">
                <dt class="col-sm-2">
                    Zip Code
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.DoctorZipCode)
                </dd>
            </dl>
            <dl class="row">
                <dt class="col-sm-2">
                    State
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.State.StateName)
                </dd>
            </dl>
            <dl class="row">
                <dt class="col-sm-2">
                    Mobile
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.DoctorMobile)
                </dd>
            </dl>
            <dl class="row">
                <dt class="col-sm-2">
                    Email
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.DoctorEmail)
                </dd>
            </dl>
            <dl class="row">
                <dt class="col-sm-2">
                    Department
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Department.DepartmentName)
                </dd>
            </dl>

            <div class="form-group row col-4">
                <a asp-action="Edit" asp-route-id="@Model.DoctorId" class="btn btn-outline-primary w-25 mx-1"><i class="fas fa-edit" style="font-size:20px"></i></a>
                <a asp-action="Index" class="btn btn-outline-info mr-1 w-25"><i class="fas fa-arrow-circle-left" style="font-size:20px"></i></a>
            </div>
        </div>

    </div>

</div>
@section Scripts {
    <script>
        $(document).ready(function () {
            $("#mainDiv").fadeIn(1000);
        });

    </script>

}